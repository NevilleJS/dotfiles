#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

# Audio
"pactl -- set-sink-volume @DEFAULT_SINK@ +5%"
   XF86AudioRaiseVolume
"pactl -- set-sink-volume @DEFAULT_SINK@ -5%"
   XF86AudioLowerVolume
"pactl -- set-sink-mute @DEFAULT_SINK@ toggle"
   XF86AudioMute

# PlayerCTL
"playerctl -p spotify,ALL next"
    XF86AudioNext
"playerctl -p spotify,ALL previous"
    XF86AudioPrev
"playerctl -p spotify,ALL play-pause"
    XF86AudioPlay
"playerctl -p spotify,ALL stop"
    XF86AudioStop

# Brightness
"blight -d amdgpu_bl0 set +10%"
    XF86MonBrightnessUp
"blight -d amdgpu_bl0 set -10%"
    XF86MonBrightnessDown

# ROFI
"rofi -theme '~/.config/rofi/themes/sed.rasi' -combi-modi window,drun -show combi -modi combi -window-format {t} -show-icons -display-combi 'RUN:'"
    Mod4+space
"""rofi -theme '~/.config/rofi/themes/sed.rasi' -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'"""
    Mod4+c

# Application Bindings
"kitty"
    Mod4+Return
"flameshot gui"
    control+Print
"flameshot full -c"
    Print
"brave"
    Mod4+b
"nemo"
    Mod4+f

##################################
# End of xbindkeys configuration #
